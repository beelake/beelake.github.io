// https://github.com/chriskempson/tomorrow-theme
hljs-background = #2d2d2d
hljs-current-line = #393939
hljs-selection = #515151
hljs-foreground = #cccccc
hljs-comment = #999999
hljs-red = #f2777a
hljs-orange = #f99157
hljs-yellow = #ffcc66
hljs-green = #99cc99
hljs-aqua = #66cccc
hljs-blue = #6699cc
hljs-purple = #cc99cc

//变量
article-padding = 20px
font-size = 14px
line-height = 1.6em
font-mono = "Source Code Pro", Consolas, Monaco, Menlo, Consolas, monospace

$code-block
  background: hljs-background
  margin: 0 article-padding * -1
  padding: 15px article-padding
  border-style: solid
  border-color: color-border
  border-width: 1px 0
  overflow: auto
  color: hljs-foreground
  line-height: font-size * line-height

$line-numbers
  color: #666
  font-size: 0.85em

//.article-entry
pre, code
  font-family: font-mono
code
  background: color-background
  text-shadow: 0 1px #fff
  padding: 0 0.3em
pre
  @extend $code-block
  code
    background: none
    text-shadow: none
    padding: 0
    
.hljs
  @extend $code-block
  pre
    border: none
    margin: 0
    padding: 0
  table
    margin: 0
    width: auto
  td
    border: none
    padding: 0
  figcaption
    clearfix()
    font-size: 0.85em
    color: hljs-comment
    line-height: 1em
    margin-bottom: 1em
    a
      float: right
  .gutter pre
    @extend $line-numbers
    text-align: right
    padding-right: 20px
  .line
    height: font-size * line-height
  .line.marked
    background: hljs-selection
.gist
  margin: 0 article-padding * -1
  border-style: solid
  border-color: color-border
  border-width: 1px 0
  background: hljs-background
  padding: 15px article-padding 15px 0
  .gist-file
    border: none
    font-family: font-mono
    margin: 0
    .gist-data
      background: none
      border: none
      .line-numbers
        @extend $line-numbers
        background: none
        border: none
        padding: 0 20px 0 0
      .line-data
        padding: 0 !important
    .hljs
      margin: 0
      padding: 0
      border: none
    .gist-meta
      background: hljs-background
      color: hljs-comment
      font: 0.85em font-sans
      text-shadow: 0 0
      padding: 0
      margin-top: 1em
      margin-left: article-padding
      a
        color: color-link
        font-weight: normal
        &:hover
          text-decoration: underline

pre
  .comment
  .title
    color: hljs-comment
  .variable
  .attribute
  .tag
  .regexp
  .ruby .constant
  .xml .tag .title
  .xml .pi
  .xml .doctype
  .html .doctype
  .css .id
  .css .class
  .css .pseudo
    color: hljs-red
  .number
  .preprocessor
  .built_in
  .literal
  .params
  .constant
    color: hljs-orange
  .class
  .ruby .class .title
  .css .rules .attribute
    color: hljs-green
  .string
  .value
  .inheritance
  .header
  .ruby .symbol
  .xml .cdata
    color: hljs-green
  .css .hexcolor
    color: hljs-aqua
  .function
  .python .decorator
  .python .title
  .ruby .function .title
  .ruby .title .keyword
  .perl .sub
  .javascript .title
  .coffeescript .title
    color: hljs-blue
  .keyword
  .javascript .function
    color: hljs-purple

